<style>
  .colaboradores-container {
    overflow: hidden;
    position: relative;
    padding: 20px 0;
  }
  
  .colaboradores-track {
    display: flex;
    animation: scroll 25s linear infinite;
    width: calc(4 * 300px * 3); /* 4 logos * 300px * 3 series */
  }
  
  .colaborador-item {
    flex-shrink: 0;
    width: 300px;
    margin-right: 30px;
  }
  
  /* Pausar animación en hover */
  .colaboradores-container:hover .colaboradores-track {
    animation-play-state: paused;
  }
  
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-4 * 330px)); /* 4 logos * (300px + 30px margin) */
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .colaborador-item {
      width: 250px;
    }
    
    .colaboradores-track {
      width: calc(4 * 250px * 3);
    }
    
    @keyframes scroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-4 * 280px));
      }
    }
  }
  
  @media (max-width: 640px) {
    .colaborador-item {
      width: 200px;
    }
    
    .colaboradores-track {
      width: calc(4 * 200px * 3);
    }
    
    @keyframes scroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-4 * 230px));
      }
    }
  }
  
  /* Efectos de hover mejorados */
  .colaborador-item:hover {
    transform: translateY(-5px);
  }
  
  /* Estilos para los contenedores de logos */
  .colaborador-item > div {
    border: 1px solid #e5e7eb;
    background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
  }
</style> 