<script>
// Efecto de seguimiento al mouse en las cards
if (typeof window !== 'undefined') {
  setTimeout(() => {
    const cards = document.querySelectorAll('.filo-card-move');
    cards.forEach(card => {
      card.addEventListener('mousemove', (e) => {
        const event = e as MouseEvent;
        const el = card as HTMLElement;
        const rect = el.getBoundingClientRect();
        const x = event.clientX - rect.left;
        const y = event.clientY - rect.top;
        const moveX = ((x / rect.width) - 0.5) * 16; // m√°x ¬±8px
        const moveY = ((y / rect.height) - 0.5) * 16;
        el.style.transform = `translate(${moveX}px, ${moveY}px) scale(1.03)`;
        el.style.transition = 'transform 0.15s';
      });
      card.addEventListener('mouseleave', () => {
        const el = card as HTMLElement;
        el.style.transform = 'translate(0,0) scale(1)';
        el.style.transition = 'transform 0.35s cubic-bezier(.22,1,.36,1)';
      });
    });
  }, 300);
}
</script>

